https://neetcode.io/problems/buy-and-sell-crypto

class Solution:
#two pointer
    def maxProfit(self, prices: List[int]) -> int:
        l,r=0 ,1
        maxProfit=0

        while(r<len(prices)):
            if prices[l]<prices[r]:
                temp= prices[r]-prices[l]
                maxProfit=max(maxProfit, temp)
            else:
                l=r
            r+=1
        return maxProfit

class Solution:
    def maxProfit(self, prices: List[int]) -> int:
        #this is one pass O(n) , O(1) solution
        maxProfit= 0
        minElem= float('inf')
        for i in range(0,len(prices)):
            minElem=min(minElem, prices[i])
            maxProfit= max(maxProfit, prices[i]- minElem)
        return maxProfit
        #[7,1,2,3,4,5] -> min(inf,7)- 7
        #              -> max(0,7-7) - 0 

        #[7,1,2,3,4,5] -> min(7,1)- 1
        #              -> max(0,0-1) - 0 

        #Greedy, with array tracking min elem
        minArr=[]
        for price in prices:
            if not minArr:
                minArr.append(price)
            else:
                if price < minArr[-1]:
                    minArr.append(price)
                else:
                    minArr.append(minArr[-1])
        maxProf=0
        for i in range(1, len(prices)):
            maxProf=max(maxProf, prices[i]-minArr[i])

        return maxProf





